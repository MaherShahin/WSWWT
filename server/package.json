    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "gravatar": "^1.8.2",
    "http-status-codes": "^2.2.0",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^8.15.1",
    "mongoose": "^6.12.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
