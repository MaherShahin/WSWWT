    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.3.8",
    "concurrently": "^7.4.0",
    "jest": "^29.6.4",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "superagent": "^8.1.2",
